<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav_graph"
    app:startDestination="@id/nested_graph_home">

    <navigation
        android:id="@+id/nested_graph_home"
        app:startDestination="@id/homeFragment">
        <fragment
            android:id="@+id/homeFragment"
            android:name="com.example.bags.presentation.home.HomeFragment"
            android:label="Home">
            <action
                android:id="@+id/action_homeFragment_to_detailsFragment"
                app:destination="@id/detailsFragment"
                app:popUpTo="@id/homeFragment" />
        </fragment>
        <fragment
            android:id="@+id/detailsFragment"
            android:name="com.example.bags.presentation.details.DetailsFragment"
            android:label="Details">
            <action
                android:id="@+id/action_detailsFragment_to_homeFragment2"
                app:destination="@id/homeFragment"
                app:launchSingleTop="true"
                app:popUpTo="@id/detailsFragment"
                app:popUpToInclusive="true" />
        </fragment>
        <action
            android:id="@+id/action_global_nested_graph_login"
            app:destination="@id/nested_graph_login"
            app:launchSingleTop="true"
            app:popUpTo="@id/nested_graph_home"
            app:popUpToInclusive="true" />
    </navigation>
    <navigation
        android:id="@+id/nested_graph_login"
        app:startDestination="@id/loginFragment">

        <fragment
            android:id="@+id/loginFragment"
            android:name="com.example.bags.presentation.login.LoginFragment"
            android:label="Login"
            tools:layout="@layout/fragment_login">
            <action
                android:id="@+id/action_loginFragment_to_newCredentialsFragment"
                app:destination="@id/newCredentialsFragment"
                app:launchSingleTop="true"
                app:popUpTo="@id/loginFragment" />
            <action
                android:id="@+id/action_loginFragment_to_signupFragment"
                app:destination="@id/signupFragment"
                app:launchSingleTop="true"
                app:popUpTo="@id/loginFragment" />
        </fragment>
        <fragment
            android:id="@+id/newCredentialsFragment"
            android:name="com.example.bags.presentation.newCreadintials.NewCredentialsFragment"
            android:label="NewCredentials"
            tools:layout="@layout/fragment_new_credentials">
            <action
                android:id="@+id/action_newCredentialsFragment_to_loginFragment"
                app:destination="@id/loginFragment"
                app:launchSingleTop="true"
                app:popUpTo="@id/newCredentialsFragment"
                app:popUpToInclusive="true" />
        </fragment>
        <fragment
            android:id="@+id/signupFragment"
            android:name="com.example.bags.presentation.signup.SignupFragment"
            android:label="Signup"
            tools:layout="@layout/fragment_signup">
            <action
                android:id="@+id/action_signupFragment_to_loginFragment"
                app:destination="@id/loginFragment"
                app:launchSingleTop="true"
                app:popUpTo="@id/signupFragment"
                app:popUpToInclusive="true" />
        </fragment>
        <action
            android:id="@+id/action_global_nested_graph_home"
            app:destination="@id/nested_graph_home"
            app:launchSingleTop="true"
            app:popUpTo="@id/nested_graph_login"
            app:popUpToInclusive="true" />
    </navigation>
    <fragment
        android:id="@+id/cartFragment"
        android:name="com.example.bags.presentation.cart.CartFragment"
        android:label="Cart"
        tools:layout="@layout/fragment_cart" />
    <fragment
        android:id="@+id/favoriteFragment"
        android:name="com.example.bags.presentation.favorite.FavoriteFragment"
        android:label="FavoriteFragment"
        tools:layout="@layout/fragment_favorite" />
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.bags.presentation.search.SearchFragment"
        android:label="Search"
        tools:layout="@layout/fragment_search" />
</navigation>